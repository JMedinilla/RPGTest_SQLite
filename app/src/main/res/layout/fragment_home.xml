<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="240dp"
        android:layout_height="120dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/btnHomeClasses"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/account_card_details"
            android:text="@string/btnHomeClasses" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="240dp"
        android:layout_height="120dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/btnHomeAdventurers"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/human"
            android:text="@string/btnHomeAdventurers" />
    </android.support.v7.widget.CardView>

</LinearLayout>