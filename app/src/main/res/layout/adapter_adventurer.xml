<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/adapterAdventurer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapterAdventurer_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/adapterAdventurer_name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/adapterAdventurer_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapterAdventurer_class"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/adapterAdventurer_srtImage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sword_cross" />

            <TextView
                android:id="@+id/adapterAdventurer_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/adapterAdventurer_srtImage"
                android:layout_alignStart="@+id/adapterAdventurer_srtImage"
                android:layout_below="@+id/adapterAdventurer_srtImage"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/adapterAdventurer_dexImage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_toEndOf="@+id/adapterAdventurer_srtImage"
                android:contentDescription="@string/app_name"
                android:src="@drawable/sword" />

            <TextView
                android:id="@+id/adapterAdventurer_dex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/adapterAdventurer_dexImage"
                android:layout_alignStart="@+id/adapterAdventurer_dexImage"
                android:layout_below="@+id/adapterAdventurer_dexImage"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/adapterAdventurer_intImage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/adapterAdventurer_dexImage"
                android:contentDescription="@string/app_name"
                android:src="@drawable/auto_fix" />

            <TextView
                android:id="@+id/adapterAdventurer_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/adapterAdventurer_intImage"
                android:layout_alignStart="@+id/adapterAdventurer_intImage"
                android:layout_below="@+id/adapterAdventurer_intImage"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>